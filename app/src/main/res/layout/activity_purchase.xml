                    android:layout_toStartOf="@+id/btn_purchase1"
                    android:text="purchase package 2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
